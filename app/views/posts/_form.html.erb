<%= render "layouts/errors", :object => @post %>

<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.text_field :title, :id => 'title', :placeholder => 'Title', :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.text_area :body, :id => 'body', :placeholder => 'Body', :class => 'form-control' %>
  </div>
  <div class="form-group">
    <!-- creates a collection of check boxes for all Tag models with value of tag.id and label of tag.name -->
    <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) %>
  </div>
  <%= f.submit 'Submit', :class => 'btn btn-success' %>
<% end %>
